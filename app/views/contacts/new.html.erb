<div class="container">
  <h3 class="text-center">Kontaktieren Sie uns</h3>
  
  <%= form_for "/contacts" do |f| %>
    <%= f.label :Name %>
    <%= f.text_field :Name %>
  
    <%= f.label :Email %>
    <%= f.text_field :Email %>
    
    <%= f.label :Kommentar %>
    <%= f.text_area :Kommentar %>
    
    <%= f.submit 'absenden' %>
  <% end %>  
  
</div>